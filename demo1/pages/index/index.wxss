/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
@keyframes roll {
  0% { transform: rotate(0deg)}
  50% { transform: rotate(180deg)} 
  100%{transform: rotate(0deg)}
}
.usermotto {
  margin-top: 20px;
}
#item0 {
  color: red;
}
#item1 {
  color : green;
  animation: roll 1s 2s;
}
#item2 {
  color: yellow;
}
#item3 {
  color: teal
}
#item4{
  color: blue
}
#item5{
  color: aqua;
}